{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Aliases */
    "baseUrl": ".",
    "paths": {
      "@godiet-assets/*": ["./src/view/assets/*"],
      "@godiet-pages/*": ["./src/view/pages/*"],
      "@godiet-layouts/*": ["./src/view/layouts/*"],
      "@godiet-ui/*": ["./src/view/ui/*"],
      "@godiet-hooks/*": ["./src/app/hooks/*"],
      "@godiet-storage": ["src/app/storage/index.ts"],
      "@godiet-utils/*": ["./src/app/utils/*"],
      "@godiet-contexts/*": ["./src/app/contexts/*"],
      "@godiet-config": ["./src/app/config/index.ts"],
      "@godiet-query": ["./src/app/libs/query.tsx"],
      "@godiet-services/*": ["./src/app/services/*"],
      "@godiet-entities": ["./src/app/entities/index.ts"],
      "@godiet-components/*": ["./src/view/components/*"],
      "@testing-suit": ["./src/app/libs/testing/suit"],
      "@testing-react": ["./src/app/libs/testing/react"]
    },

    /* Testing */
    "types": ["vitest/globals"]
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
